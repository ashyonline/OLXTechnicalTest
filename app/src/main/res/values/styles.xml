<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppCompatTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Customize your Toolbar Theme by using this same style name -->
    <style name="material_toolbar">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>
    </style>

    <!-- Customize your Toolbar Theme by using this same style name -->
    <style name="AppCompatTheme.Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/material_toolbar</item>
    </style>

</resources>
